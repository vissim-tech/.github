{
  "version": "2024-10-01",
  "servers": [
    {
      "id": "sonarqube",
      "name": "SonarQube MCP Server",
      "description": "Local SonarQube MCP server (Container-based).",
      "manifest": {
        "type": "stdio",
        "command": "podman",
        "args": [
          "run",
          "-i",
          "--rm",
          "-e",
          "SONARQUBE_TOKEN",
          "-e",
          "SONARQUBE_ORG",
          "-e",
          "SONARQUBE_CLOUD_URL",
          "-e",
          "SONARQUBE_IDE_PORT",
          "mcp/sonarqube",
        ]
      }
    }
  ]
}
